                            input.form-control.form-control-sm.account-payed(type="text")
                        else
                            input.form-control.form-control-sm.account-payed(type="text" readonly)
            .d-flex.justify-content-end.gap-2.mt-3
                button.btn.btn-outline-secondary.account-cut-close İPTAL
                button.btn.btn-outline-primary.account-cut-save KAYDET
                button.btn.btn-outline-danger.account-cut-undo-btn(style="display:none") GERİ AL

    .register
        .gtr-header
            span KASA
        .register-close
            i.fa-solid.fa-x
        .d-flex.flex-column.gap-3.p-3
            .d-flex.gap-2
                .input-group.register-data-input
                    span.input-group-text(style="background-color: #2660ff;color: white;") Toplam Bakiye
                    input.form-control.balance(type="text" readonly)
                .input-group.register-data-input
                    span.input-group-text Toplam Nakit Bakiye
                    input.form-control.cash-balance(type="text" readonly)
