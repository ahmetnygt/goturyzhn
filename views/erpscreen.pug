                span.input-group-text Kesinti 1
                input.form-control.account-deduction1(type="text")
            .input-group
                span.input-group-text Kesinti 2
                input.form-control.account-deduction2(type="text")
            .input-group
                span.input-group-text Kesinti 3
                input.form-control.account-deduction3(type="text")
            .input-group
                span.input-group-text Kesinti 4
