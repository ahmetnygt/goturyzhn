    .add-announcement
        .gtr-header
            span DUYURU EKLE
        .announcement-add-close
            i.fa-solid.fa-x
        .d-flex.flex-column.gap-3.p-3
            .input-group
                span.input-group-text Mesaj
                textarea.form-control.announcement-message
            .input-group
                span.input-group-text Şube
                select.form-select.announcement-branch
                    option(value="") Herkes
