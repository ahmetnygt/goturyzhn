            .input-group
                span.input-group-text Kesinti 5
                input.form-control.account-deduction5(type="text")
            .input-group
                span.input-group-text Bahşiş
                input.form-control.account-tip(type="text")
            .d-flex.justify-content-end.gap-2
                button.btn.btn-outline-secondary.account-cut-deductions-cancel İPTAL
                button.btn.btn-outline-primary.account-cut-deductions-continue DEVAM ET

