ul.nav.nav-tabs
    li.nav-item
        a.nav-link.active(data-bs-toggle="tab" href="#activeTickets") AKTİF
    li.nav-item
        a.nav-link(data-bs-toggle="tab" href="#canceledTickets") İPTAL
.tab-content
    .tab-pane.fade.show.active#activeTickets
        table.table.table-bordered.table-hover.table-sm.m-0.bg-white
            thead
                tr
                    th(scope="col") K.No
                    th(scope="col") Ad Soyad
                    th(scope="col") Cinsiyet
                    th(scope="col") Nereden
                    th(scope="col") Nereye
                    th(scope="col") Ücret
                    th(scope="col") Tahsilat
                    th(scope="col") Durum
                    th(scope="col") Telefon
                    th(scope="col") Kimlik
                    th(scope="col") PNR
            tbody
                each t in activeTickets
                    tr(class=t.isOtherStop ? 'other-stop' : '')
                        td.text-center #{t.seatNo}
                        td #{t.name} #{t.surname}
                        td #{t.gender}
                        td #{t.from}
                        td #{t.to}
                        td #{t.price}
                        td Nakit
                        if t.status == "web"
                            td WEB
                        else if t.status == "completed" || t.status == "gotur"
                            td SATIŞ
                        else if t.status == "reservation"
                            td REZ
                        else if t.status == "open"
                            td AÇIK
                        else if t.status == "pending"
                            td BEKLEMEDE
                        else
                            td -
                        td #{t.phoneNumber}
                        td #{t.idNumber}
                        td #{t.pnr ? t.pnr : ""}
    .tab-pane.fade#canceledTickets
        table.table.table-bordered.table-hover.table-sm.m-0.bg-white
            thead
                tr
                    th(scope="col") K.No
                    th(scope="col") Ad Soyad
                    th(scope="col") Cinsiyet
                    th(scope="col") Nereden
                    th(scope="col") Nereye
                    th(scope="col") Ücret
                    th(scope="col") Tahsilat
                    th(scope="col") Durum
                    th(scope="col") Telefon
                    th(scope="col") Kimlik
                    th(scope="col") PNR
            tbody
                each t in canceledTickets
                    tr
                        td.text-center #{t.seatNo}
                        td #{t.name} #{t.surname}
                        td #{t.gender}
                        td #{t.from}
                        td #{t.to}
                        td #{t.price}
                        td Nakit
                        if t.status == "canceled"
                            td İPTAL
                        else if t.status == "refund"
                            td İADE
                        else
                            td #{t.status}
                        td #{t.phoneNumber}
                        td #{t.idNumber}
                        td #{t.pnr ? t.pnr : ""}
