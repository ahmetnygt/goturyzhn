p.m-0.text-center.fs-5.fw-bold #{trip.date} - #{trip.time}
p.mb-3.text-center Select the tickets you want to process.
.tickets_
    each t in tickets
        .ticket-cancel-box(class=t.gender data-pnr=t.pnr data-seat-number=t.seatNo)
            i.fa-solid.fa-check.ticket-cancel-check
            p.text-center
                b 
                    span.seat-number #{t.seatNo}
            p.text-center
                b
                    span.from #{t.from}
                    i.fa-solid.fa-route.mx-2
                    span.to #{t.to}
            p.text-center
                span.name #{t.name} #{t.surname} 
                |   / 
                span.phone #{t.phoneNumber}
            p 
                b Processed By:
                |   Ahmet / Çanakkale
            p 
                b Price:
                span.price   
                    |   #{t.price}
                |₺
            p 
                b Payment Method:
                span.payment   Cash
            p 
                b PNR:
                span.pnr   #{t.pnr}
            p 
                b Transaction Time:
                span.createdAt
                    |   #{t.createdAt}