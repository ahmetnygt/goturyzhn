extends erplayout

block content
    .login-page.position-relative
        .login-accent.login-accent-top
        .login-accent.login-accent-bottom
        .login-brand.text-center.text-lg-start
            .d-flex.gap-3
                img.login-logo.mb-4(src=`/images/gotur_yzhn_logo.png` alt="GoturYZHN")
                if firmLogo !== "gotur_yzhn_logo.png"
                    img.login-logo.mb-4(src=`/images/${firmLogo}` alt=firmLogo)
            h1.display-6.mb-3 Welcome!
            p.lead.text-muted.mb-4
                | Manage your trips, track payments, and control the entire operation from one place.
            ul.list-unstyled.login-highlights
                li
                    i.fa-solid.fa-gauge-high
                    span Seamless tracking with real-time updates.
                li
                    i.fa-solid.fa-file
                    span Detailed and consistent reporting.
                li
                    i.fa-solid.fa-headset
                    span We are with you every step of the way with 24/7 support.
        .login-card.shadow-lg
            form.login-form(action="/login" method="POST")
                h2.h4.fw-semibold.mb-4.text-center Log in to your account
                .form-floating.mb-3
                    input#usernameInput.username.form-control(type="text" name="username" placeholder="Username" required autocomplete="username")
                    label(for="usernameInput") Username
                .form-floating.mb-3.position-relative
                    input#passwordInput.password.form-control(type="password" name="password" placeholder="Password" required autocomplete="current-password")
                    label(for="passwordInput") Password
                    button.password-toggle.btn.btn-link(type="button" aria-label="Show or hide password")
                        i.fa-solid.fa-eye
                .d-flex.flex-wrap.justify-content-between.align-items-center.gap-2.mb-3
                    span.login-tip.d-flex.align-items-center.gap-2
                        i.fa-solid.fa-lock
                        span Your information is secure.
                    a.login-support-link(href="tel:+905434832785") 
                        i.fa-solid.fa-phone.me-1 
                        |Technical Support: 0543 483 2785
                button.btn.btn-primary.login-submit(type="submit") LOG IN
                p.text-muted.small.text-center.mt-3
                    | New here? Request your login credentials from your supervisor.

block scripts
    script(src="/scripts/erplogin.js")